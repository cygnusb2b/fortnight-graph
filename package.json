{
  "name": "fortnight-graph",
  "version": "1.0.0-beta.3",
  "main": "src/index.js",
  "repository": "https://github.com/cygnusb2b/fortnight-graph.git",
  "author": "Jacob Bare <jacob@limit0.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "pretest": "yarn run posttest && $npm_package_docker_test_install && $npm_package_docker_test_installPlugins",
    "posttest": "$npm_package_docker_test_down && $npm_package_docker_test_prune",
    "test": "$npm_package_docker_test_test",
    "prestart": "$npm_package_docker_dev_install && $npm_package_docker_dev_installPlugins",
    "start": "$npm_package_docker_dev_up",
    "stop": "$npm_package_docker_dev_down",
    "terminal": "docker exec -it fortnightgraph_app_1 /bin/bash",
    "prelint": "$npm_package_docker_test_install && $npm_package_docker_test_installPlugins",
    "lint": "$npm_package_docker_test_lint",
    "postlint": "$npm_package_docker_test_down",
    "precoverage": "yarn run postcoverage && $npm_package_docker_test_install && $npm_package_docker_test_installPlugins",
    "coverage": "$npm_package_docker_test_coverage",
    "postcoverage": "$npm_package_docker_test_down && $npm_package_docker_test_prune",
    "test:ci": "yarn run lint:run && ./node_modules/.bin/mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./coverage/test-results.xml",
    "test:run": "yarn run lint:run && ./node_modules/.bin/mocha --reporter spec",
    "lint:run": "./node_modules/.bin/eslint \"src/**/*.js\"",
    "coverage:run": "./node_modules/.bin/nyc yarn run test:ci"
  },
  "docker": {
    "dev": {
      "install": "docker-compose -p fortnightgraph run --no-deps --entrypoint yarn app",
      "installPlugins": "docker-compose -p fortnightgraph run --no-deps elasticsearch-plugins",
      "up": "docker-compose -p fortnightgraph up",
      "down": "docker-compose -p fortnightgraph down"
    },
    "test": {
      "install": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --no-deps --entrypoint yarn test",
      "installPlugins": "docker-compose -p fortnightgraphtest run --no-deps elasticsearch-plugins",
      "test": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run test",
      "coverage": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --entrypoint yarn test run coverage:run",
      "lint": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --entrypoint yarn test run lint:run",
      "down": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml down",
      "prune": "docker volume prune --filter label=io.as3.appname=fortnight-graph --filter label=io.as3.env=test --filter label=io.as3.discard=true --force"
    }
  },
  "dependencies": {
    "@limit0/graphql-custom-types": "^1.0.1",
    "@limit0/mongoose-graphql-pagination": "^1.1.0",
    "@sendgrid/mail": "^6.2.1",
    "apollo-server-express": "^1.3.6",
    "aws-sdk": "^2.186.0",
    "base64-url": "^2.1.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "crawler-user-agents": "https://github.com/monperrus/crawler-user-agents.git#master",
    "deep-assign": "^2.0.0",
    "deepmerge": "^2.1.0",
    "elasticsearch": "^15.0.0",
    "envalid": "^4.1.4",
    "escape-string-regexp": "^1.0.5",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "googleapis": "^32.0.0",
    "graphql": "^0.13.2",
    "graphql-import": "^0.4.3",
    "graphql-tools": "^2.21.0",
    "graphql-type-json": "^0.2.1",
    "handlebars": "^4.0.11",
    "helmet": "^3.11.0",
    "http-errors": "^1.6.2",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "mongoose": "^5.1.2",
    "mongoose-elasticsearch-xp": "^5.4.1",
    "multer": "^1.3.0",
    "multer-s3": "^2.7.0",
    "newrelic": "^4.7.0",
    "object-hash": "^1.2.0",
    "object-path": "^0.11.4",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "redis": "^2.8.0",
    "sendgrid": "^5.2.3",
    "shortid": "^2.2.8",
    "slug": "^0.9.1",
    "ua-parser-js": "^0.7.17",
    "unique-push-id": "^1.0.2",
    "uuid": "^3.2.1",
    "uuid-parse": "^1.0.0",
    "validator": "^9.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "gulp": "^3.9.1",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "^1.17.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.2",
    "supertest": "^3.0.0"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "all": true,
    "cache": false,
    "include": [
      "src/**/*.js"
    ]
  }
}
