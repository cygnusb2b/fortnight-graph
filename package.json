{
  "name": "fortnight-graph",
  "version": "0.1.0",
  "main": "src/index.js",
  "repository": "https://github.com/cygnusb2b/fortnight-graph.git",
  "author": "Jacob Bare <jacob@limit0.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "$npm_package_docker_dev_install && $npm_package_docker_dev_up",
    "stop": "$npm_package_docker_dev_down",
    "test": "$npm_package_docker_test_install && $npm_package_docker_test_test; $npm_package_docker_test_down",
    "lint": "$npm_package_docker_test_install && $npm_package_docker_test_lint; $npm_package_docker_test_down",
    "coverage": "$npm_package_docker_test_install && $npm_package_docker_test_coverage; $npm_package_docker_test_down",
    "test:ci": "yarn run lint:run && ./node_modules/.bin/mocha \"test/**/*.spec.js\" --reporter mocha-junit-reporter",
    "test:run": "yarn run lint:run && ./node_modules/.bin/mocha \"test/**/*.spec.js\" --reporter spec",
    "lint:run": "./node_modules/.bin/eslint \"src/**/*.js\"",
    "coverage:run": "./node_modules/.bin/nyc yarn run test:ci"
  },
  "docker": {
    "dev": {
      "install": "docker-compose -p fortnightgraph run --no-deps --entrypoint yarn app",
      "up": "docker-compose -p fortnightgraph up",
      "down": "docker-compose -p fortnightgraph down"
    },
    "test": {
      "install": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --no-deps --entrypoint yarn test",
      "test": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run test",
      "coverage": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --entrypoint yarn test run coverage:run",
      "lint": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml run --entrypoint yarn test run lint:run",
      "down": "docker-compose -p fortnightgraphtest -f test/docker-compose.yml down"
    }
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "aws-sdk": "^2.186.0",
    "base64-url": "^2.1.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "deep-assign": "^2.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "faker": "^4.1.0",
    "graphql": "^0.12.3",
    "graphql-import": "^0.4.1",
    "graphql-tools": "^2.18.0",
    "helmet": "^3.9.0",
    "http-errors": "^1.6.2",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^5.0.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "redis": "^2.8.0",
    "shortid": "^2.2.8",
    "uuid": "^3.2.1",
    "uuid-parse": "^1.0.0",
    "validator": "^9.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "gulp": "^3.9.1",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "^1.17.0",
    "nyc": "^11.4.1",
    "sinon": "^4.2.2",
    "supertest": "^3.0.0"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "all": true,
    "cache": false,
    "include": [
      "src/**/*.js"
    ]
  }
}
